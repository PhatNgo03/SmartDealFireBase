<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="130dp"
        android:layout_margin="15dp"
        android:background="@drawable/itemcard" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="96dp">



            <ImageView
                android:id="@+id/imgVoucherCart"
                android:layout_width="119dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                tools:srcCompat="@tools:sample/avatars"></ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvtenvoucherCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TAKOYAKI-BUFFET  hơn 40 loại nhân"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvgiagiamCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$192.000 đ"
                        android:textColor="@color/red" />

                    <TextView
                        android:id="@+id/tvgiagocCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="15dp"
                        android:text="240.000đ"
                        android:textColor="@color/black"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="72dp"
                        android:layout_height="21dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/bksearch"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/btnGiamSoLuong"
                            android:layout_width="14dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/bkcolor"
                            android:src="@drawable/baseline_remove_24" />

                        <TextView
                            android:id="@+id/tvslCart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="1"
                            android:textColor="@color/black"
                            android:textSize="15dp"></TextView>

                        <ImageButton
                            android:id="@+id/btnTangSoLuong"
                            android:layout_width="14dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/bkcolor"
                            android:src="@drawable/baseline_add_24" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="72dp"
                        android:layout_height="21dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/bksearch">

                        <TextView
                            android:id="@+id/btnxoavoucherCart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Xóa"
                            android:textAlignment="center"
                            android:textColor="@color/black">

                        </TextView>
                    </LinearLayout>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tvTongTien"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="tong tien">
                    </TextView>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>