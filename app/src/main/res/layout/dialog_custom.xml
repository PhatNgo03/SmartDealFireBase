<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="400dp"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
   >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/ivVoucherInfo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:srcCompat="@tools:sample/avatars" />
            <TextView
                android:id="@+id/tvIFDiscountPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginRight="10dp"
                android:text="1234"
                android:textColor="@color/red"
                android:textSize="16sp"

                />

            <TextView
                android:id="@+id/tvIFPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="5678"
                android:textSize="16sp"
                android:textStyle="normal" />
        </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-250dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="Số lượng sản phẩm">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="21dp"

                android:background="@drawable/bksearch"
                android:gravity="center"

                >

                <ImageButton
                    android:id="@+id/btnGiamSoLuong"
                    android:layout_width="14dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/bkcolor"
                    android:src="@drawable/baseline_remove_24" />

                <TextView
                    android:id="@+id/tvslCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="15dp"></TextView>

                <ImageButton
                    android:id="@+id/btnTangSoLuong"
                    android:layout_width="14dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/bkcolor"
                    android:src="@drawable/baseline_add_24" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btThanhToan"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@color/white"
        android:text="Thanh toán "
        android:textColor="@color/black"
        />

</LinearLayout>