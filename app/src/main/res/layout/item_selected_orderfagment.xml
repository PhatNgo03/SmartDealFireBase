<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:layout_margin="15dp"
        android:background="@drawable/itemcard" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="160dp">



            <ImageView
                android:id="@+id/imgVoucherOrder"
                android:layout_width="119dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                tools:srcCompat="@tools:sample/avatars"></ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvVoucherNameOder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TAKOYAKI-BUFFET  hơn 40 loại nhân"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvDiscountPriceOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="192.000 đ"
                        android:textColor="@color/red" />

                    <TextView
                        android:id="@+id/tvPriceOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text="240.000đ"
                        android:textColor="@color/black"></TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng tiền :"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/tvToTalOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="15dp"
                        android:text="240.000đ"
                        android:textColor="@color/red"></TextView>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="10dp"
                            android:text="Số lượng"
                            android:textColor="@color/black"
                            android:textSize="15dp"></TextView>

                        <TextView
                            android:id="@+id/tvQuantityOrder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="1"
                            android:textColor="@color/black"
                            android:textSize="15dp"></TextView>
                    <TextView
                        android:id="@+id/tvDeleteOrder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="Hủy"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:textColor="@color/black">

                    </TextView>
                    </LinearLayout>





                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

</LinearLayout>