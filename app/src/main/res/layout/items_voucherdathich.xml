<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="270dp"
    android:orientation="vertical"
    android:padding="8dp"
    android:id="@+id/Framethongtinvoucher"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/ivVoucherInfo1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/img_liked"
            android:layout_marginStart="110dp"

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/heart_red_24"/>
        <TextView
            android:id="@+id/tvIFVoucherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:text="name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvIFDiscountPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginRight="10dp"
                android:text="1234"
                android:textColor="@color/red"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvIFPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="5678"
                android:textSize="16sp"
                android:textStyle="normal" />
        </LinearLayout>



    </LinearLayout>
</FrameLayout>