<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="13dp"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ivVoucherImageNCC"
        android:layout_width="186dp"
        android:layout_height="114.14dp"
        tools:srcCompat="@tools:sample/avatars" />



    <LinearLayout
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvVoucherNameNCC"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDiscountPriceNCC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginRight="10dp"
                android:text="1234"
                android:textColor="@color/red"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvPriceNCC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="5678"
                android:textSize="16sp"
                android:textStyle="normal" />
        </LinearLayout>


        <TextView
            android:id="@+id/tvDanhMucGoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:text="nguoi mua"
            android:textSize="15dp" />

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imgbtnxoa"
                android:layout_marginRight="80dp"
                app:srcCompat="@drawable/baseline_delete_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <ImageButton
                android:id="@+id/imgbtnsua"
                app:srcCompat="@drawable/baseline_edit_24"
                android:layout_width="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
