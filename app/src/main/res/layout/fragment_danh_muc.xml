<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.DanhMucFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bkimg"
                android:layout_width="316dp"
                android:layout_height="107dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="45dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/logo"
                />


            <TextView
                android:hint="Nhập từ khóa tìm kiếm...."
                android:id="@+id/edtserchDM"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/bksearch"
                android:drawableRight="@drawable/searchicon"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="45dp"
                android:paddingLeft="10sp"
                android:padding="15dp"
                android:textColorHint="#8F8F8F"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:text="DEALS"
                    android:textColor="#039EFA"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="0dp"
                    android:background="@color/black"
                    android:backgroundTint="#039EFA"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvDMAmThucODM"
                    android:layout_width="74dp"
                    android:layout_height="72dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/cu"
                    android:drawableTop="@drawable/food"
                    android:gravity="center"
                    android:text="Ẩm thực"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDMDuLichODM"
                    android:layout_width="74dp"
                    android:layout_height="72dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/cu"
                    android:drawableTop="@drawable/travel"
                    android:gravity="center"
                    android:text="Du lịch"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDanhMucSpaODM"
                    android:layout_width="74dp"
                    android:layout_height="72dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/cu"
                    android:drawableTop="@drawable/spa"
                    android:gravity="center"
                    android:text="Spa"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</FrameLayout>