<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/FrameOrder"
    tools:context=".Fragment.OrderFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#E5EBFF"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="23dp"
                android:src="@drawable/img">


            </ImageView>
            <TextView
                android:id="@+id/tvBackOrder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="-50dp"
                android:text="Thông tin giao hàng "
                android:textColor="@color/black"
                android:textSize="27dp">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="314dp"
            android:layout_height="566dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/vienaccount"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên người dùng :"
                    android:textColor="@color/black"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="25dp"
                    android:textSize="15dp">
                </TextView>
                <TextView
                    android:id="@+id/tvTenNguoiDungOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hoàng Phát "
                    android:textColor="@color/black"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="25dp"
                    android:textSize="15dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá tiền lúc đầu: "
                    android:textColor="@color/black"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="25dp"
                    android:textSize="15dp">
                </TextView>

                <TextView
                    android:id="@+id/tvGiaGocOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:text="960.000 đ"
                    android:textColor="@color/black"
                    android:textSize="15dp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá tiền lúc sau khi giảm: "
                    android:textColor="@color/black"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="25dp"
                    android:textSize="15dp">
                </TextView>
                <TextView
                    android:id="@+id/tvGiaGiamOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="768.000 đ"
                    android:textColor="@color/red"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="25dp"
                    android:textSize="15dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng tiền "
                    android:textColor="@color/black"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="25dp"
                    android:textSize="15dp">
                </TextView>
                <TextView
                    android:id="@+id/tvTongTienOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="768.000 đ"
                    android:textColor="@color/red"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="25dp"
                    android:textSize="15dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="252dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:background="@drawable/vienaccount"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ giao hàng : "
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp">
                </TextView>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="102, chiến thắng, phú nhuận, HCM"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp">
                </EditText>
            </LinearLayout>
            <Button
                android:id="@+id/btSuaTTOder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:text="Sửa"
                android:backgroundTint="@color/white">
            </Button>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SDT:"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginLeft="25dp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0123456789"
                    android:textColor="@color/black"
                    android:layout_marginLeft="25dp"
                    android:textSize="15dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="252dp"
                android:layout_height="130dp"
                android:orientation="vertical"
                android:background="@drawable/vienaccount"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ghi chú : "
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp">
                </TextView>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="không được phép làm hỏng món hàng   "
                    android:textColor="@color/black"
                    android:textSize="15dp">
                </EditText>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btThanhToan"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/white"
            android:text="Thanh toán "
            android:textColor="@color/black"
            />


    </LinearLayout>
</ScrollView>
</FrameLayout>